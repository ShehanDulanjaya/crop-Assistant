<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.core.sheha.ftest.MyProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/profile"

        >


        <EditText
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/textView12"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/textView12"
            android:layout_below="@+id/textView12"
            android:layout_marginEnd="40dp"
            android:layout_marginTop="10dp"
            android:background="@layout/corner"
            android:text="Name "
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtnum"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/txtName"
            android:layout_alignLeft="@+id/textView13"
            android:layout_alignRight="@+id/txtName"
            android:layout_alignStart="@+id/textView13"
            android:layout_below="@+id/textView13"
            android:layout_marginTop="10dp"
            android:background="@layout/corner"
            android:text="Mobile"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtEmail"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/txtnum"
            android:layout_alignLeft="@+id/textView14"
            android:layout_alignRight="@+id/txtnum"
            android:layout_alignStart="@+id/textView14"
            android:layout_below="@+id/textView14"
            android:layout_marginTop="10dp"
            android:background="@layout/corner"
            android:text="Email"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText

            android:id="@+id/txtAddress"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/txtEmail"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignRight="@+id/txtEmail"
            android:layout_alignStart="@+id/textView15"
            android:layout_below="@+id/textView8"
            android:layout_marginTop="10dp"
            android:background="@layout/corner"
            android:text="Address"
            android:textAlignment="center"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/txtpropass"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/txtnum"
            android:layout_alignLeft="@+id/textView15"
            android:layout_alignRight="@+id/txtnum"
            android:layout_alignStart="@+id/textView15"
            android:layout_below="@+id/textView15"
            android:layout_marginTop="10dp"
            android:background="@layout/corner"
            android:inputType="textPassword"
            android:text="Password"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="38dp"
            android:layout_marginStart="38dp"
            android:layout_marginTop="30dp"
            android:text="Name "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtName"
            android:layout_alignStart="@+id/txtName"
            android:layout_below="@+id/txtName"
            android:layout_marginTop="20dp"
            android:text="Mobile "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtnum"
            android:layout_alignStart="@+id/txtnum"
            android:layout_below="@+id/txtAddress"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textSize="18sp" />

        <CheckBox
            android:id="@+id/cbpass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txtpropass"
            android:layout_alignRight="@+id/txtpropass"
            android:layout_below="@+id/txtpropass"
            android:layout_marginTop="10dp"
            android:checked="false"
            android:text="Show Password"
            android:textColor="#000" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cbpass"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="17dp"
            android:background="@layout/cornerbtn"
            android:text="  Save  "
            android:textColor="@color/white" />


        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView12"
            android:layout_alignRight="@+id/textView12"
            android:layout_below="@+id/txtnum"
            android:layout_marginTop="20dp"
            android:text="Email "
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txtEmail"
            android:layout_alignStart="@+id/txtEmail"
            android:layout_below="@+id/txtEmail"
            android:layout_marginTop="20dp"
            android:text="Address"
            android:textSize="18sp" />


    </RelativeLayout>


</ScrollView>
