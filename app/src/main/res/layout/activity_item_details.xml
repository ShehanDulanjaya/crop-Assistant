<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.core.sheha.ftest.ItemDetails">
    <ImageView
        android:id="@+id/ItemImg"
        android:layout_width="270dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/ItemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ItemImg"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Episode here"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/ItemDecs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ItemTitle"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:text="Large Text"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ItemDecs"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.08"
        android:text="Current Highest Bid"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtOwner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/itemPrice"
        android:layout_marginEnd="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="27dp"
        android:textColor="@color/colorPrimary"
        android:text="By : abc "
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnAddtoCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtOwner"
        android:layout_alignStart="@+id/txtOwner"
        android:layout_below="@+id/txtOwner"
        android:layout_marginTop="37dp"
        android:background="@layout/cornerbtn"
        android:text="   Add to Cart  "
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnBid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnAddtoCart"
        android:layout_alignBottom="@+id/btnAddtoCart"
        android:layout_alignEnd="@+id/txtOwner"
        android:layout_alignRight="@+id/txtOwner"
        android:background="@layout/cornerbtn"
        android:text="      Bid Item     "
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnbidhistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnAddtoCart"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="@layout/cornerbtn"
        android:text="      View bid history      "
        android:textColor="@color/white" />
</RelativeLayout>
