<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mannat.spinandwin.SignUp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_launcher"
        tools:layout_editor_absoluteX="47dp"
        tools:layout_editor_absoluteY="64dp"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="21dp"
        android:text="Sign Up Here"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="99dp"
        tools:layout_editor_absoluteY="174dp"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="64dp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/imageView5"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="21dp"
        android:background="@layout/corner"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/txtName"
        android:layout_marginTop="25dp"
        android:background="@layout/corner"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txtAddress"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="21dp"
        android:background="@layout/corner"
        android:layout_below="@+id/txtEmail"
        android:ems="10"
        android:hint="Enter Your Address"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/txtNo"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_below="@+id/txtAddress"
        android:layout_marginTop="25dp"
        android:background="@layout/corner"
        android:ems="10"
        android:hint="Enter Your Mobile No."
        android:inputType="text|number"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/txtpropass"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="27dp"
        android:background="@layout/corner"
        android:ems="10"
        android:hint="Choose Password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_below="@+id/txtNo"
        android:layout_alignLeft="@+id/txtNo"
        android:layout_alignStart="@+id/txtNo" />

    <Button
        android:id="@+id/btnSignup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@layout/cornerbtn"
        android:text="  Create Account  "
        android:textColor="@color/white"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/txtpropass"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
